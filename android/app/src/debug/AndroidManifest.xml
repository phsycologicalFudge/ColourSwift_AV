<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application tools:node="merge">

        <!-- Remove the Bird icon alias entirely in debug builds -->
        <activity-alias
            android:name=".IconBirdAlias"
            tools:node="remove" />

        <!-- Ensure the default alias stays (no launcher duplication) -->
        <activity-alias
            android:name=".IconDefaultAlias"
            tools:node="merge" />

    </application>

</manifest>
